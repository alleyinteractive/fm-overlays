<?xml version="1.0"?>
<ruleset name="WordPress Plugin Coding Standards Configuration">
	<!-- Set a description for this ruleset. -->
	<description>FM Overlays PHPCS Ruleset.</description>

	<!--
	Pass some flags to PHPCS:
	 p flag: Show progress of the run.
	 s flag: Show sniff codes in all reports.
	-->
	<arg value="ps" />

	<!-- Strip the filepaths down to the relevant bit. -->
	<arg name="basepath" value="./" />

	<!-- Check up to 8 files simultaneously. -->
	<arg name="parallel" value="8" />

	<!-- Check both PHP and JS files. -->
	<arg name="extensions" value="php,js" />

	<!-- Set severity to 1 to see everything that isn't effectively turned off. -->
	<arg name="severity" value="1" />

	<!-- Check all files in this directory and the directories below it. -->
	<file>.</file>

	<exclude-pattern>tests/*</exclude-pattern>
	<exclude-pattern>vendor/*</exclude-pattern>
	<exclude-pattern>node_modules/*</exclude-pattern>

	<!-- Include the WordPress ruleset, with exclusions. -->
	<rule ref="WordPress">
		<!-- These may need to be excluded if they throw too many false positives -->
		<!-- <exclude name="Generic.WhiteSpace.ScopeIndent.Incorrect" /> -->
		<exclude name="Squiz.PHP.EmbeddedPhp.ContentAfterOpen" />
		<exclude name="WordPress.NamingConventions.ValidFunctionName.FunctionNameInvalid" />
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />
	</rule>

	<!-- Tweak the VIP rules -->
	<rule ref="WordPress.Security.EscapeOutput.OutputNotEscaped">
		<type>warning</type>
	</rule>

</ruleset>
